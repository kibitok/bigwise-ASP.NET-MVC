@model Bigwise.Models.Logistics


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>Logistics Form</title>
</head>
<body>
    <div>
        <div class="panel panel-success">
            <div class="panel-heading text-center"><h4>Logistics Registration</h4></div>
            <div class="panel-body">
                @using (Html.BeginForm())

                {
                    @Html.ValidationSummary()
                    <p>Please Subscribe to be Part of our Logistics team</p>
                    <div class="form-group">
                        <label>Car Number:</label>
                        @Html.TextBoxFor(x => x.CarNumber, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Car Number Plate:</label>
                        @Html.TextBoxFor(x => x.CarNumberPlate, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Destination of the Car:</label>
                        @Html.TextBoxFor(x => x.Destinationlocation, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Driver Phone Number:</label>
                        @Html.TextBoxFor(x => x.DriverPhone, new { @class = "form-control" })
                    </div>
                  
                    <div class="text-center">
                        <input class="btn btn-success" type="submit" value="Submit Logistics" />
                    </div>
                }

            </div>
        </div>
    </div>
</body>
</html>